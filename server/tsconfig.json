{
    "ts-node": {
        "files": true,
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "compilerOptions": {
        "lib": ["ES5", "ES6", "ES2017", "ESNext"],
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "typeRoots": ["node_modules/@types", "src/@types"],
        "strict": true,
        "alwaysStrict": true,
        "allowJs": false,
        "removeComments": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", "package.json"]
}
